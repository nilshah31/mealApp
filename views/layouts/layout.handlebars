</head>

<body>
<div class="logo_products">
  {{#checkUserIsAdmin user}}
  {{else}}
    <div class="w3ls_logo_products_left">
      <h1>
        <a href="/">SOUTHMEAL'S</a>
      </h1>
      <br />
    </div>
  {{/checkUserIsAdmin}}
  {{#if user}}
    <br />
    <div class="clearfix"></div>
  {{else}}
    <div>
      <form id="loginform" class="form-horizontal" role="form" method="post" action="/users/login">
        <span>
          <i class="glyphicon glyphicon-user" style="margin-top: 0.1em;margin-bottom:0em;margin-left:5em;"></i>
        </span>
        <input type="search" name="username" class="custmInputBox" placeholder="Mobile Number" pattern="[789][0-9]{9}" required>
        <span>
          <br />
          <i class="glyphicon glyphicon-lock" style="margin-top:0.6em;margin-left:5em;"></i>
        </span>
        <input type="password" name="password" style="width:11%;height:5%;" class="custmInputBox custmInputBox_pw" placeholder="Password" required>
        <button type="submit" class="btn btn-default search login_button">Login</button>
        <br />
        <a href="/forget_password" class="forget_pw_link">Forgot Password?</a>
        <a href="/users/register" class="signUp_link">Sign Up Here</a>
      </form>
    </div>
    <br />
    <div class="clearfix"> </div>
  {{/if}}
</div>

{{#checkUserIsAdmin user}}
{{else}}
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav navbar-center">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="../howWeWork">How we Work?</a></li>
          <li><a href="../contact">Feedback</a></li>
          <li style="color:#222;">TESTTESTETSTESTES</li>
          <li>
          <div id="timer">
            <div id="timeing" style="color:white;font-size:15px;"></div>
          </div>
          </li>
        </ul>
        {{#if user}}
          <ul class="nav navbar-nav navbar-right" style="margin-right:12em;">
            <li>
              <div class="dropdown accountdropdown"  style="margin-top:0px;">
                <a class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user" /> {{user.firstname}} <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="/user_order_history">Order History</a></li>
                  <li><a href="/user_profile">View Profile</a></li>
                  <li><a href="#">Support</a></li>
                </ul>
              </div>
            </li>
            <li><a href="/users/logout"><span class="glyphicon glyphicon-user"></span>Logout</a></li>
          </ul>
          {{/if}}

        </div>
    </div>
</nav>
{{/checkUserIsAdmin}}

{{{body}}}

{{#checkUserIsAdmin user}}
{{else}}

<footer id="site-footer" class="footer">
    <center><p>
        &copy; 2017 South Meal,Bangalore.
    </p></center>
</footer>
{{/checkUserIsAdmin}}

