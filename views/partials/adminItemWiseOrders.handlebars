<!--Item DIV -->
  <!--Item List DIV -->
  <div id="ItemOrderDiv">
    <div class="panel panel-default">
      <div class="panel-heading">Item Avaible</div>
      <div class="panel-body">
        <center>
          <div class="row">
            <div class="table-responsive">
              <input type="text" id="search_by_location_item" style="width:20%;height:25%" class="input-lg" placeholder="Search by Location" />&nbsp;&nbsp;&nbsp;
              <a  href="#" id='exportButtonItemWise' class='exportButtonItemWise btn btn-success btn-lg' name='exportButtonItemWise'>
                <span class="glyphicon glyphicon-download-alt" style="color:white"></span>
              </a>
              <br /><br />
              <table id="itemWiseOrdered">
                <caption>Item Wise Order</caption>
                <tr class="header">
                  <th>Item</th>
                  <th style="text-align:center">Total Item Placed</th>
                  <th>Location</th>
                </tr>
                {{#each item_ordered_list}}
                <tr>
                  <td>{{item_name}}</td>
                  <td style="text-align:center">{{total_ordered_placed}}</td>
                  <td>{{location}}</td>
                </tr>
                {{/each}}
              </table>
            </div>
          </div>
        </center>
      </div>
    </div>
  </div>

