<style>

.login_button{
  float: right;
  margin-top:0.3em;
  margin-right: 13%;
}

.forget_pw_link{
  float: right;
  margin-top:10px;
  margin-right: 13%;
}

.signUp_link{
  float: right;
  margin-top:10px;
  margin-right: 1%;
}

/* Mobile CSS */
@media only screen and (max-width: 768px) {
  .custmInputBox{
    width: 50%;
    height: 5%;
    margin-left:0em;
  }
  .custmInputBox {
    width: 50%;
  }
  .login_button{
    float: right;
    margin-top:0.3em;
    margin-right: 4%;
  }

  .forget_pw_link{
    float: right;
    margin-top:10px;
